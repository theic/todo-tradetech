{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2022"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "lib",
    "strict": false,
    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@domain/*": ["domain/*"],
      "@app/*": ["app/*"]
    }
  },
  "include": ["src"]
}
